%ul.comments
  - @month.comments.each do |comment|
    %li.comment
      .container
        .user
          %a{ :href => "https://news.ycombinator.com/user?id=#{comment['username']}" }#{comment['username']}
          %span.date.right.type-info= comment['date']
        = simple_format(comment['text'])

