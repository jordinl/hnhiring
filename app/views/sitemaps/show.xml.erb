<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= root_url %></loc>
    <lastmod><%= @posts.map(&:max_published_at).max.iso8601 %></lastmod>
  </url>
  <%- @posts.find_each do |post| %>
    <url>
      <loc><%= post_url(post) %></loc>
      <lastmod><%= post.max_published_at.iso8601 %></lastmod>
    </url>
  <% end %>
  <%- @locations.find_each do |location| %>
    <url>
      <loc><%= location_url(location) %></loc>
      <lastmod><%= location.updated_at.iso8601 %></lastmod>
    </url>
  <% end %>
  <%- @technologies.find_each do |technology| %>
    <url>
      <loc><%= technology_url(technology) %></loc>
      <lastmod><%= technology.updated_at.iso8601 %></lastmod>
    </url>
  <% end %>
</urlset>
